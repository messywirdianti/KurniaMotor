<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/page_login___4"
    tools:context=".RegistrasiActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAFTAR"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"/>


    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Nama Lengkap"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="25dp" />


    <EditText
        android:id="@+id/edt_nama"
        android:layout_width="364dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/kotakisi"
        android:hint="Ketik nama lengkap anda"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama"
        tools:layout_editor_absoluteX="23dp" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edt_nama"
        tools:layout_editor_absoluteX="23dp" />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="364dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/kotakisi"
        android:hint="Ketik username anda"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edt_username"
        tools:layout_editor_absoluteX="23dp" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="364dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/kotakisi"
        android:hint="Ketik Email anda"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/tv_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="No. Hp/WhatsApp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        tools:layout_editor_absoluteX="23dp" />

    <EditText
        android:id="@+id/edt_hp"
        android:layout_width="364dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/kotakisi"
        android:hint="Ketik no.hp atau wa anda"
        app:layout_constraintTop_toBottomOf="@+id/tv_hp"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/tv_sandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Kata Sandi"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edt_hp"
        tools:layout_editor_absoluteX="23dp" />

    <EditText
        android:id="@+id/edt_sandi"
        android:layout_width="364dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/kotakisi"
        android:hint="Ketik kata sandi anda"
        app:layout_constraintTop_toBottomOf="@+id/tv_sandi"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/tv_konfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="No. Hp/WhatsApp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edt_sandi"
        tools:layout_editor_absoluteX="23dp" />

    <EditText
        android:id="@+id/edt_konfirmasi"
        android:layout_width="364dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/kotakisi"
        android:hint="Ketik no.hp atau wa anda"
        app:layout_constraintTop_toBottomOf="@+id/tv_konfirmasi"
        tools:layout_editor_absoluteX="25dp" />

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:layout_marginTop="44dp"
        android:text="Masuk >"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/edt_konfirmasi"
        tools:layout_editor_absoluteX="42dp" />

    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="@color/white"
        android:text="Daftar >"
        android:textColor="@color/black"

        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_masuk"
        tools:layout_editor_absoluteY="630dp" />


</androidx.constraintlayout.widget.ConstraintLayout>