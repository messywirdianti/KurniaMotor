<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bakgroundlogin"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_login">
        </ImageView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">

            <TextView
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/TitleLogin"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="@font/sbpoppins"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Username"
                android:fontFamily="@font/sbpoppins"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:fontFamily="@font/rpoppins"
                android:textSize="16sp"
                android:background="@drawable/radius_circle"
                android:hint="Masukkan Username/Email anda"
                android:inputType="textEmailAddress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Password"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sbpoppins"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Kata Sandi anda"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/radius_circle"
                android:fontFamily="@font/rpoppins"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Sandi"
                android:textSize="12dp"
                android:fontFamily="@font/rpoppins"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_masuk"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="Masuk"
                    android:fontFamily="@font/sbpoppins"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:background="@drawable/radius_circle"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/icon_next_dark"
                    android:paddingLeft="25dp"
                    android:paddingRight="12dp"
                    android:layout_marginStart="170dp"
                    android:layout_marginEnd="25dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_NhaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/Akun"
                android:fontFamily="@font/rpoppins"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:padding="5dp"
                android:layout_gravity="right"
                android:layout_marginRight="42dp"/>

        </FrameLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>